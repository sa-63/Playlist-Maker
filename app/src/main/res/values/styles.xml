<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="iconPadding">@dimen/padding_10</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsActivityFl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsActivityButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeSwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/light_grey</item>
        <item name="android:colorForeground">@color/light_grey</item>
    </style>

    <style name="SettingsActivityButtonsText">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsActivityImages">
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="searchEditTextStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:hint">@string/search</item>
        <item name="android:drawableLeft">@drawable/ic_search_in_et</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="maxLines">1</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:textColorHint">?attr/editTextColor</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TrackItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:maxWidth">125dp</item>
    </style>

    <style name="tv_left_bottom_of_player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="tv_right_bottom_of_player">
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:textDirection">rtl</item>
    </style>

    <style name="back_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_arrow_back</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
    </style>

    <style name="song_info_tv_player">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="vertical_guide_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="player_image_buttons">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

</resources>