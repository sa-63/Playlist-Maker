<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_16"
    android:paddingTop="@dimen/padding_14"
    android:paddingEnd="@dimen/zero_dp">

    <LinearLayout
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="end"
        android:paddingBottom="44dp">

        <ImageButton
            android:id="@+id/back_imageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow_back"
            android:backgroundTint="?attr/colorOnPrimary" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_gravity="end"
            android:text="@string/settings" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/theme_ll"
        style="@style/SettingsActivityFr">

        <ImageButton
            android:id="@+id/dark_theme_btn"
            style="@style/SettingsActivityButtons" />

        <TextView
            android:id="@+id/theme_tv"
            style="@style/SettingsActivityButtonsText"
            android:text="@string/app_theme_str" />

        <ToggleButton
            android:id="@+id/toggle_Btn_settings"
            style="@style/CustomToggleButton"
            android:layout_gravity="end"
            android:layout_marginEnd="18dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/share_ll"
        style="@style/SettingsActivityFr">

        <ImageButton
            android:id="@+id/shareBtn"
            style="@style/SettingsActivityButtons" />

        <TextView
            android:id="@+id/share_tv"
            style="@style/SettingsActivityButtonsText"
            android:text="@string/share" />

        <ImageView
            style="@style/SettingsActivityImageButtons"
            android:layout_marginEnd="@dimen/margin_16"
            android:background="@drawable/ic_share"
            android:contentDescription="@string/share" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/support_ll"
        style="@style/SettingsActivityFr">

        <ImageButton
            android:id="@+id/supportBtn"
            style="@style/SettingsActivityButtons" />

        <TextView
            android:id="@+id/support_tv"
            style="@style/SettingsActivityButtonsText"
            android:text="@string/text_support" />

        <ImageView
            style="@style/SettingsActivityImageButtons"
            android:layout_marginEnd="@dimen/margin_14"
            android:background="@drawable/ic_support"
            android:contentDescription="@string/share" />
    </FrameLayout>

    <FrameLayout style="@style/SettingsActivityFr">

        <ImageButton
            android:id="@+id/termsOfUseBtn"
            style="@style/SettingsActivityButtons" />

        <TextView
            android:id="@+id/terms_of_use_tv"
            style="@style/SettingsActivityButtonsText"
            android:text="@string/terms_of_use"
            android:textSize="@dimen/text_16" />

        <ImageView
            style="@style/SettingsActivityImageButtons"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@drawable/ic_arrow"
            android:contentDescription="@string/share" />
    </FrameLayout>
</LinearLayout>
