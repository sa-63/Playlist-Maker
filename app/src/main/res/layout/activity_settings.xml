<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_16"
        android:paddingTop="@dimen/padding_14"
        android:paddingEnd="@dimen/zero_dp">

        <LinearLayout
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:gravity="end"
            android:paddingBottom="@dimen/padding_44">

            <ImageButton
                android:id="@+id/back_imageBtn_in_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_back"
                android:backgroundTint="?attr/colorOnPrimary" />

            <TextView
                style="@style/HeaderTextStyle"
                android:layout_gravity="end"
                android:text="@string/settings" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/theme_fl"
            style="@style/SettingsActivityFl">

            <ImageButton
                android:id="@+id/dark_theme_btn"
                style="@style/SettingsActivityButtons" />

            <TextView
                android:id="@+id/theme_tv"
                style="@style/SettingsActivityButtonsText"
                android:text="@string/app_theme_str" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/theme_switch"
                style="@style/SettingsActivityImages"
                android:layout_marginEnd="@dimen/margin_10"
                android:theme="@style/ThemeSwitchStyle" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/share_fl"
            style="@style/SettingsActivityFl">

            <ImageButton
                android:id="@+id/shareBtn"
                style="@style/SettingsActivityButtons" />

            <TextView
                android:id="@+id/share_tv"
                style="@style/SettingsActivityButtonsText"
                android:text="@string/share" />

            <ImageView
                style="@style/SettingsActivityImages"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/margin_16"
                android:background="@drawable/ic_share"
                android:contentDescription="@string/share" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/support_fl"
            style="@style/SettingsActivityFl">

            <ImageButton
                android:id="@+id/supportBtn"
                style="@style/SettingsActivityButtons" />

            <TextView
                android:id="@+id/support_tv"
                style="@style/SettingsActivityButtonsText"
                android:text="@string/text_support" />

            <ImageView
                style="@style/SettingsActivityImages"
                android:layout_marginEnd="@dimen/margin_14"
                android:background="@drawable/ic_support"
                android:contentDescription="@string/text_support" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/terms_of_use_fl"
            style="@style/SettingsActivityFl">

            <ImageButton
                android:id="@+id/termsOfUseBtn"
                style="@style/SettingsActivityButtons" />

            <TextView
                android:id="@+id/terms_of_use_tv"
                style="@style/SettingsActivityButtonsText"
                android:text="@string/terms_of_use"
                android:textSize="@dimen/text_16" />

            <ImageView
                style="@style/SettingsActivityImages"
                android:layout_marginEnd="@dimen/margin_20"
                android:background="@drawable/ic_arrow"
                android:contentDescription="@string/terms_of_use" />
        </FrameLayout>
    </LinearLayout>
</layout>