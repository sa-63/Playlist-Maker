<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_16"
    android:paddingTop="@dimen/padding_14"
    android:paddingEnd="@dimen/zero_dp">

    <LinearLayout
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="end"
        android:paddingBottom="44dp">

        <ImageButton
            android:id="@+id/back_imageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow_back"
            android:backgroundTint="?attr/colorOnPrimary" />

        <TextView
            android:layout_gravity="end"
            android:text="@string/settings"
            style="@style/HeaderTextStyle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/theme_ll"
        style="@style/SettingsActivityLL">

        <TextView
            android:id="@+id/theme_tv"
            style="@style/SettingsActivityButtonsText"
            android:text="@string/app_theme_str" />

        <ToggleButton
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="@drawable/custom_toggle_button"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_ll"
        style="@style/SettingsActivityLL"
        android:paddingEnd="@dimen/padding_16">

        <TextView
            android:id="@+id/share_tv"
            style="@style/SettingsActivityButtonsText"
            android:text="@string/share" />

        <ImageButton
            android:id="@+id/shareBtn"
            style="@style/SettingsActivityImageButtons"
            android:background="@drawable/ic_share"
            android:contentDescription="@string/share" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/support_ll"
        style="@style/SettingsActivityLL"
        android:paddingEnd="@dimen/padding_14">

        <TextView
            android:id="@+id/support_tv"
            style="@style/SettingsActivityButtonsText"
            android:text="@string/text_support" />

        <ImageButton
            android:id="@+id/supportBtn"
            style="@style/SettingsActivityImageButtons"
            android:background="@drawable/ic_support"
            android:contentDescription="@string/share" />
    </LinearLayout>

    <LinearLayout
        style="@style/SettingsActivityLL"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/terms_of_use_tv"
            style="@style/SettingsActivityButtonsText"
            android:text="@string/terms_of_use"
            android:textSize="@dimen/text_16" />

        <ImageButton
            android:id="@+id/termsOfUseBtn"
            style="@style/SettingsActivityImageButtons"
            android:background="@drawable/ic_arrow"
            android:contentDescription="@string/share" />
    </LinearLayout>
</LinearLayout>