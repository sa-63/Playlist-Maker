<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_17"
    android:paddingTop="@dimen/padding_14"
    android:paddingEnd="@dimen/padding_15"
    android:paddingBottom="@dimen/padding_28"
    tools:context=".mainscreen.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:paddingBottom="@dimen/padding_40"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_22" />

        <Button
            android:id="@+id/search_btn_main"
            style="@style/MainButtonsStyle"
            android:text="@string/search"
            app:icon="@drawable/ic_search" />

        <Button
            android:id="@+id/media_library_btn_main"
            style="@style/MainButtonsStyle"
            android:text="@string/media_library"
            app:icon="@drawable/ic_media_library" />

        <Button
            android:id="@+id/settings_btn_main"
            style="@style/MainButtonsStyle"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings" />
    </LinearLayout>
</LinearLayout>