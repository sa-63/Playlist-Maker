<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/MediaFragment">

    <fragment
        android:id="@+id/MediaFragment"
        android:name="com.project.playlistmaker.media.presentation.ui.MediaFragment"
        android:label="MediaFragment">
        <action
            android:id="@+id/action_libraryFragment_to_PlayerFragment"
            app:destination="@id/PlayerFragment" />
        <action
            android:id="@+id/action_MediaFragment_to_PlaylistsFragment"
            app:destination="@id/PlaylistsFragment" />
        <action
            android:id="@+id/action_MediaFragment_to_FavouritesFragment"
            app:destination="@id/FavouritesFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.project.playlistmaker.searchscreen.ui.fragments.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_PlayerFragment"
            app:destination="@id/PlayerFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.project.playlistmaker.settingsscreen.ui.fragments.SettingsFragment"
        android:label="SettingsFragment" />

    <fragment
        android:id="@+id/PlayerFragment"
        android:name="com.project.playlistmaker.playerscreen.ui.activity.PlayerActivity"
        android:label="PlayerFragment" >
    </fragment>

    <fragment
        android:id="@+id/PlaylistsFragment"
        android:name="com.project.playlistmaker.myplaylists.ui.fragment.PlaylistsFragment"
        android:label="PlaylistsFragment" />

    <fragment
        android:id="@+id/FavouritesFragment"
        android:name="com.project.playlistmaker.media.presentation.ui.favourites.FavouritesFragment"
        android:label="FavouritesFragment" >
    </fragment>

    <fragment
        android:id="@+id/PlaylistDetailsFragment"
        android:name="com.project.playlistmaker.media.presentation.ui.playlist_details.PlaylistDetailsFragment"
        android:label="PlaylistDetailsFragment" >
        <argument
            android:name="playlist_id"
            app:argType="long" />
        <action
            android:id="@+id/action_aboutPlaylistFragment_to_PlayerFragment"
            app:destination="@id/PlayerFragment" />
        <action
            android:id="@+id/action_PlaylistDetailsFragment_to_PlaylistEditFragment"
            app:destination="@id/PlaylistEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/PlaylistEditFragment"
        android:name="com.project.playlistmaker.media.presentation.ui.playlist.PlaylistEditFragment"
        android:label="PlaylistEditFragment"
        tools:layout="@layout/fragment_playlist" >
        <argument
            android:name="playlist"
            app:argType="com.practicum.playlistmaker.media.presentation.models.ParcelablePlaylist" />
    </fragment>
</navigation>